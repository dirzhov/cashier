{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "noImplicitAny": true,

    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["ES2022", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.vue",]
}
